@model IEnumerable<StorageAppWeb.Models.Item>

@{
    ViewData["Title"] = "Index";
}


<form action="/items" method="GET" style="display: flex; margin-bottom: 20px">
    <label for="search" style="margin-right: 20px; font-weight: bold">Search: </label>
    <input type="text" id="search" name="search" value=""><br>
    <input class="btn btn-success" style="margin-left: 10px" type="submit" value="Submit">
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReferencedStorage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReferencedStorage.ReferencedRoom)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferencedStorage.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferencedStorage.ReferencedRoom.Name)
            </td>
        </tr>
}
    </tbody>
</table>
